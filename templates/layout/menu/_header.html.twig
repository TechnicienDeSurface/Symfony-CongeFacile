{% block header %}


	<style>
		body {
			margin: 0;
			padding: 0;
			/*background-color: #fff;*/
		}

		.header {
			width: 98%;
			height: 50px;
			margin: 20px auto 0;
			display: flex;
			align-items: center;
			background-color: #004c6c; /* Bleu fonc√© */
			border-radius: 10px; /* Bords arrondis */
			position: relative;
			padding: 32px 0;
		}

		.header-ombre {

			width: 97%;
			height: 40px;
			margin: -8px 1.5%;
			border-radius: 10px;
			background-color: #b4c4cf;
			position: absolute;

		}

		.logo img {
			height: 40px; /* Taille du logo */
			margin: 0 20px;
		}
	</style>


	<header class="header-ombre"></header>
	<div class="header">
		<div class="logo">
			<a href="{{ path('app_home') }}">
				<img src="{{ asset('/image/logo-mentalworks-blanc.png') }}" alt="Logo">
			</div>
		</a>
	</div>

{% endblock %}
