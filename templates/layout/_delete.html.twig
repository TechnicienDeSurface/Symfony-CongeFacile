<button class="bg-blue-800 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-900 transition duration-300" onclick="showModal()">
    Supprimer
</button>

<div id="delete-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
    <div class="bg-white p-6 rounded-lg shadow-lg w-1/2">
        <h2 class="text-lg font-bold mb-4">Confirmer la suppression</h2>
        <p class="mb-4">Êtes-vous sûr de vouloir supprimer ce manager ?</p>
        
        {{ form_start(confirmation, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_widget(confirmation, {'attr': {'class': 'text-white bg-blue-900 w-full p-3 rounded-md border border-blue-900 focus:ring-2 focus:ring-blue-600'}}) }}
        {{ form_end(confirmation) }}

        <button class="bg-gray-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-700 transition mt-4" onclick="cancelAndRedirect()">Annuler</button>
    </div>
</div>

<script>
    function showModal() {
        document.getElementById('delete-modal').classList.remove('hidden');
    }
    function hideModal() {
        document.getElementById('delete-modal').classList.add('hidden');
    }
    function cancelAndRedirect() {
        // Fermer la modale
        document.getElementById('delete-modal').classList.add('hidden');
        // Rediriger vers une autre page
        window.location.href = "{{ path('app_administration_manager') }}";
    }
</script>