{# templates/preference.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Préférences
{% endblock %}

{% block body %}
    {% include 'layout/menu/_header.html.twig' %}
    <main class="flex flex-grow">
        {% include 'layout/menu/_sidebar.html.twig' %}

        <section class="w-full justify-center items-start p-8">
            <div class="bg-white p-6 rounded-lg shadow-md w-full mb-2">
                <h2 class="text-2xl font-bold text-gray-700 mb-6">Mes préférences</h2>
                {% include 'layout/_addFlash.html.twig' %}
                {{ form_start(form) }}
                    <div class="flex-inline flex-grow mb-4">
                        <div class="flex items-center">
                            <label class="relative cursor-pointer">
                            {{ form_widget(form.alert_on_answer, {'attr': {'class': 'hidden peer'}}) }}
                            <div
                                class="w-11 h-6 flex items-center bg-gray-300 rounded-full peer peer-checked:after:translate-x-full after:absolute after:left-[2px] peer-checked:after:border-white after:bg-white after:border after:border-gray-300 after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-[#004C6C]">
                            </div>
                            </label>
                            <label for="{{ form.alert_on_answer.vars.id }}" class="ml-4 text-sm font-medium text-gray-900 dark:text-gray-300">{{ form_label(form.alert_on_answer) }}</label>
                        </div>
                        <div class='mb-4'></div>
                        <div class="flex items-center">
                            <label class="relative cursor-pointer">
                            {{ form_widget(form.alert_before_vacation, {'attr': {'class': 'hidden peer'}}) }}
                            <div
                                class="w-11 h-6 flex items-center bg-gray-300 rounded-full peer peer-checked:after:translate-x-full after:absolute after:left-[2px] peer-checked:after:border-white after:bg-white after:border after:border-gray-300 after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-[#004C6C]">
                            </div>
                            </label>
                            <label for="{{ form.alert_before_vacation.vars.id }}" class="ml-4 text-sm font-medium text-gray-900 dark:text-gray-300">{{ form_label(form.alert_before_vacation, ) }}</label>
                        </div>
                    </div>

                    <div class="flex items-center w-1/4">
                        {{ form_widget(form.submit, ) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </section>
    </main>
{% endblock %}