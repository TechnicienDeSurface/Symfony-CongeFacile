{# templates/type_demande/form.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}

	<title>
		{% block title %}Manager - Consulter une demande
		{% endblock %}
	</title>

	{% include 'layout/menu/_header.html.twig' %}

	<main style="display: flex;">

		{% include 'layout/menu/_sidebar.html.twig' %}

		<div class="w-full p-8 overflow-y-auto">

            <h2 class="text-left font-bold text-2xl mb-4">Types de demandes</h2>

            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control  mt-1 block w-[250px] rounded-md p-2 border border-gray-400 shadow-sm'} }) }}
                </div>

                <div class="d-flex gap-2">
                    {{ form_widget(form.supprimer, { 'attr': {'class': 'w-[200px] text-white bg-red-700 hover:bg-red-800 border-none rounded-md h-[35px] font-medium cursor-pointer'} }) }}
                    {{ form_widget(form.mettreAJour, { 'attr': {'class': 'w-[200px] text-white bg-blue-800 hover:bg-blue-900 border-none rounded-md h-[35px] font-medium cursor-pointer'} }) }}
                </div>
            {{ form_end(form) }}

        </div>
	</main>


{% endblock %}
