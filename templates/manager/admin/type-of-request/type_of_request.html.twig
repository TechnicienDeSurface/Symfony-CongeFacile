{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-4xl mx-auto mt-10">
    <h1 class="text-2xl font-bold mb-4">Types de demandes</h1>
    
    <button class="bg-blue-900 text-white px-4 py-2 rounded-lg mb-4">Ajouter un type de demande</button>
    
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-100">
                    <th class="p-3">Nom du type de demande</th>
                    <th class="p-3">Nb demandes associées</th>
                    <th class="p-3">Action</th>
                </tr>
                <tr>
                    <td class="p-3"><input type="text" class="border p-2 w-full" placeholder="Rechercher..."></td>
                    <td class="p-3"><input type="text" class="border p-2 w-full" placeholder="Nb"></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% for demande in demandes %}
                    <tr class="border-t">
                        <td class="p-3">{{ demande.nom }}</td>
                        <td class="p-3">{{ demande.nb }}</td>
                        <td class="p-3">
                            <button class="bg-gray-200 px-3 py-1 rounded">Détails</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
