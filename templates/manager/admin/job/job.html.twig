{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-5xl mx-auto p-6 bg-white shadow-md rounded-lg">
    <h1 class="text-2xl font-bold mb-4">Postes</h1>
    <button class="bg-blue-600 text-white px-4 py-2 rounded mb-4">Ajouter un poste</button>
    
    <div class="bg-gray-100 p-4 rounded">
        <div class="grid grid-cols-2 gap-4 mb-2">
            <input type="text" placeholder="Nom du poste" class="p-2 border rounded">
            <input type="number" placeholder="Nb personnes liées" class="p-2 border rounded">
        </div>
        
        <table class="w-full bg-white shadow-md rounded-lg">
            <thead>
                <tr class="bg-gray-200">
                    <th class="p-2 text-left">Nom du poste</th>
                    <th class="p-2 text-left">Nb personnes liées</th>
                    <th class="p-2">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for job in jobs %}
                <tr class="border-t">
                    <td class="p-2">{{ job.name }}</td>
                    <td class="p-2">{{ job.people_count }}</td>
                    <td class="p-2">
                        <button class="bg-gray-300 px-3 py-1 rounded">Détails</button>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
