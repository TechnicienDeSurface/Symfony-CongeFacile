{% extends 'base.html.twig' %}

{% block body %}
	<title>
		{% block title %}Ajouter un poste
		{% endblock %}
	</title>
	<body>
		{% include 'layout/menu/_header.html.twig' %}

		<main style="display: flex;">
			{% include 'layout/menu/_sidebar.html.twig' %}

			<div class="w-full p-8">
				<h1 class="text-left font-bold text-2xl my-4 " style='color : #004C6C !important'>
					DÃ©veloppeur web
				</h1>

				{{ form_start(form) }}
				<div class="mb-4 w-1/4">
					{{ form_label(form.name, 'Nom du poste :', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
					{{ form_widget(form.name, {'attr': {'class': 'shadow border rounded w-full py-2 px-3'}}) }}
					{% if form.name.vars.errors|length > 0 %}
						<div class="mb-4 p-4 rounded-lg text-sm bg-red-100 text-red-800 mt-[10px]">
							{% for error in form.name.vars.errors %}
								{{ error.message }}
							{% endfor %}
						</div>
					{% endif %}
					{% for label, messages in app.flashes %}
						{% for message in messages %}
								<div class="mb-4 p-4 rounded-lg text-sm warning bg-red-100 text-red-800 mt-[10px]">
									{{ message }}
								</div>
							{% endfor %}
					{% endfor %}
				</div>

				<div class="flex items-left gap-5">
					{{ form_widget(form.submit, {'attr': {'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'}}) }}
					{{ form_widget(form.delete, {'attr': {'class': 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-2'}}) }}
				</div>
				{{ form_end(form) }}

			</div>
		</main>
	</body>
{% endblock %}
