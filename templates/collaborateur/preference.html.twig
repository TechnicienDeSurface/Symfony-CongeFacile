{# templates/preference.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Préférences
{% endblock %}

{% block body %}
    {% include 'layout/menu/_header.html.twig' %}
    <main class="flex flex-grow">
        {% include 'layout/menu/_sidebar.html.twig' %}

        <section class="w-full justify-center items-start p-8">
            <div class="bg-white p-6 rounded-lg shadow-md w-full">
                <h2 class="text-2xl font-bold text-gray-700 mb-6">Effectuer une nouvelle demande</h2>
                {{ form_start(form) }}
                    <div class="flex items-center">
                        {{ form_widget(form.alert_on_answer, ) }}
                        {{ form_label(form.alert_on_answer, ) }}
                    </div>
                      {% set alert_on_answer_widget = form_widget(form.alert_on_answer, {'attr': {'class': 'sr-only peer'}}) %}
                        <div class="flex items-center justify-center">
                            {{ alert_on_answer_widget }}
                            <label for="{{ form.alert_on_answer.vars.id }}" class="relative inline-flex items-center cursor-pointer">
                                <div class="w-11 h-6 bg-gray-200 rounded-full peer-checked:bg-blue-600"></div>
                                <div class="absolute left-1 top-1 bg-white w-4 h-4 rounded-full transition-transform peer-checked:translate-x-full"></div>
                            </label>
                        </div>

                    <div class="flex items-center">
                        {{ form_widget(form.alert_before_vacation, ) }}
                        {{ form_label(form.alert_before_vacation, ) }}
                    </div>
                    <div class="flex items-center">
                        {{ form_widget(form.submit, ) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </section>
    </main>
{% endblock %}